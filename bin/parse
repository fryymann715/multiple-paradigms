#!/usr/bin/env node

const fs = require('fs')
const parseArgs = require('minimist')
import ooParser from '../lib-object-oriented'

const args = parseArgs(process.argv.slice(2))
const fileName = args._[0]
const fileContents = fs.readFileSync(fileName, 'utf8')

if (!fileName) {
  throw new Error("Missing fileName argument.")
}

switch (args.paradigm) {
  case 'oo':
    const loopyParser = new ooParser( fileContents )
    loopyParser.outputMarkdown()
    break
  case 'functional':
    // load and use functional parser
    break
  case 'imperative':
    // load and use imperative parser
    break
  default:
    console.error("Missing --paradigm flag.")
}
